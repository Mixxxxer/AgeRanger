@{
    ViewBag.Title = "[People]";
}
<p/>

<div ng-controller="personCtrl">
    <div>
        <p><b><i>People</i></b></p>
        <table class="table table-hover">
            <tr>
                <td>
                    <span>
                        Start typing to filter : 
                        <input type="text" name="filter" id="filter" ng-model="filter" ng-change="changeFilter()" class="form-control" style="display: inline"  />
                        <span ng-click="resetFilter()" class="btn btn-primary">Reset Filter</span>
                    </span>
                    
                </td>
            </tr>
        </table>
        <table id="display" class="table table-hover">
            <tr>
                <td><b>ID</b></td>
                <td><b>First Name</b></td>
                <td><b>Last Name</b></td>
                <td><b>Age</b></td>
                <td><b>Age Group</b></td>
            </tr>
            <tr ng-repeat="person in persons | filter: filter">
                <td>
                    {{person.Id}}
                </td>
                <td>
                    {{person.FirstName}}
                </td>
                <td>
                    {{person.LastName}}
                </td>
                <td>
                    {{person.Age}}
                </td>
                <td>
                    {{person.AgeRangeDescription}}
                </td>
                <td>
                    <span ng-click="editPerson(person)" class="btn btn-primary">Edit</span>
                    <span ng-click="deletePerson(person)" class="btn btn-danger">Delete</span>
                </td>
            </tr>
        </table>
</div>
    <span id="addbtn" ng-click="addPersonDiv()" class="btn btn-primary">Add Person</span>
    <div ng-show="divChange">
        <table class="table">
            <tr>
                <td><b><i>{{Action}} Person</i></b></td>
                <td />
                <td />
                <td />
            </tr>
            <tr>
                <td>First Name</td>
                <td><input id="firstname" type="text" ng-model="personFirstName" class="form-control" required /></td>
                <td>Last Name</td>
                <td><input id="lastname" type="text" ng-model="personLastName" class="form-control" required /></td>
            </tr>
            <tr>
                <td>Age</td>
                <td><input id="age" type="text" ng-model="personAge" class="form-control" required /></td>
                <td />
                <td />
            </tr>
        </table>
        <input id="savebtn" type="button" class="btn btn-primary" value="Save" ng-click="addupdatePerson()"/>
        <input id="cancelbtn" type="button" class="btn btn-danger" value="Cancel" ng-click="cancel()"/>
    </div>
</div>